<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Web Demo Suite" verbose="0" parallel="tests"
	thread-count="100">
	<listeners>
		<listener class-name="com.yourcompany.listeners.SauceTestListener"/>
	</listeners>

	<test name="Web Scenarios Chrome Mac Test" enabled="true">
		<parameter name="API" value="Legacy"></parameter>
		<parameter name="cap:browserName" value="chrome"></parameter>
		<parameter name="cap:version" value="latest"></parameter>
		<parameter name="cap:platform" value="macOS 10.14"></parameter>
<!--		<parameter name="cap:extendedDebugging" value="true"></parameter>-->
<!--		<parameter name="cap:capturePerformance" value="true"></parameter>-->
		<parameter name="cap:build" value="parallel-TestNG-cross-browser-and-platform-demo-6"></parameter>
		<parameter name="cap:screenResolution" value="1152x864"></parameter>
		<groups>
			<run>
				<include name="@Web1" />
			</run>
		</groups>
		<packages>
			<package name="com.yourcompany.tests"></package>
		</packages>
	</test>

